@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>TFN</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>PostCode</th>
            <th>Mobile</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.TFN</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td>@customer.State</td>
                <td>@customer.PostCode</td>
                <td>@customer.Mobile</td>
                <td><a asp-action="Update" asp-route-id="@customer.CustomerID">Update</a> </td>
            </tr>
        }
    </tbody>
</table>
