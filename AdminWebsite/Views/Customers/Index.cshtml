@model IEnumerable<Customer>

@{
ViewData["Title"] = "Customers";
}

<h1>Customers</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>TFN</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>PostCode</th>
            <th>Mobile</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.TFN</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td>@customer.State</td>
                <td>@customer.PostCode</td>
                <td>@customer.Mobile</td>
                <td>@(customer.IsLocked ? "Locked" : "Unlocked")</td>
                <td>
                    @if (customer.IsLocked)
                    {
                        <a asp-action="Unlock" asp-route-id="@customer.CustomerID">Unlock</a>
                    }
                    else
                    {
                        <a asp-action="Lock" asp-route-id="@customer.CustomerID">Lock</a>
                    }
                    <a asp-action="Edit" asp-route-id="@customer.CustomerID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>