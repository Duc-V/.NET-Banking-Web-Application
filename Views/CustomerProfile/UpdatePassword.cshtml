@model ViewModel
@{
    ViewData["Title"] = "Update your password";
}

<h2>Update your password</h2>
@await Html.PartialAsync("_RenderAlerts", Model)

<form asp-action="SavePassword">
    <div class="form-group">
        <label for="OldPassword">Old Password:</label>
        <input type="password" name="OldPassword" class="form-control" autofocus/>
    </div>
    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" name="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ConfirmNewPassword">Confirm the new password</label>
        <input type="password" name="ConfirmNewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>