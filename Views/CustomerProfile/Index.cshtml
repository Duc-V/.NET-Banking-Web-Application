@model ViewModel

@{
    ViewData["Title"] = "Customer Profile";
    var img = String.Empty;
    if(Model.Customer.ProfilePicture is null)
    {
        img = "https://api.dicebear.com/5.x/bottts-neutral/svg?seed=" + Model.Customer.CustomerID;
    } else
    {
        img = Convert.ToBase64String(Model.Customer.ProfilePicture);
    }
}

<h2>Customer Profile</h2>
@await Html.PartialAsync("_RenderAlerts", Model)

<img src="@img"
     class="img-fluid rounded mt-4" style="width: 80px; height: 80px; object-fit: cover;">

<div class="form-group mt-4">
    <label>Name:</label>
    <p>@Model.Customer.Name</p>
</div>
<div class="form-group">
    <label>Address:</label>
    <p>@Model.Customer.Address</p>
</div>
<div class="form-group">
    <label>City:</label>
    <p>@Model.Customer.City</p>
</div>
<div class="form-group">
    <label>PostCode:</label>
    <p>@Model.Customer.PostCode</p>
</div>

<a asp-action="Edit" class="btn btn-primary">Update Profile</a>
<br />
<a asp-action="UpdatePassword" class="btn btn-primary">Update password</a>