@model Customer
@{
    ViewData["Title"] = "Customer Profile";
}
<h2>Customer Profile</h2>

<div class="form-group">
    <label>Name:</label>
    <p>@Model.Name</p>
</div>
<div class="form-group">
    <label>Address:</label>
    <p>@Model.Address</p>
</div>
<div class="form-group">
    <label>City:</label>
    <p>@Model.City</p>
</div>
<div class="form-group">
    <label>PostCode:</label>
    <p>@Model.PostCode</p>
</div>

<a asp-action="Edit" class="btn btn-primary">Update Profile</a>